<% if (title) { %>
<h1 class="form-title"><%= title %></h1>
<% } else { res.redirect('/') } %>

<!-- Display message in case of error -->
<% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<form class="login-form" action="/client/register" method="post">
  <div class="form-input">
    <label for="firstname">Firstname:</label>
    <input
      type="text"
      name="client_firstname"
      id="firstname"
      placeholder="Firstname"
      required
      value="<%= locals.client_firstname %>"
    />
  </div>
  <div class="form-input">
    <label for="lastname">Lastname:</label>
    <input
      type="text"
      name="client_lastname"
      id="lastname"
      placeholder="Lastname"
      required
      value="<%= locals.client_lastname %>"
    />
  </div>
  <div class="form-input">
    <label for="email">Email:</label>
    <input
      type="email"
      name="client_email"
      id="email"
      placeholder="csemotors@email.com"
      required
      value="<%= locals.client_email %>"
    />
  </div>
  <div class="form-input">
    <label for="password">Password:</label>

    <input
      type="password"
      name="client_password"
      id="password"
      placeholder="Password"
      required
      pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
    />
  </div>
  <div class="password-req">
    <p>At least 12 characters</p>
    <p>At least 1 uppercase character</p>
    <p>1 number and 1 special character</p>
  </div>
  <div class="form-submit reg">
    <input type="submit" value="Register" />
  </div>
</form>

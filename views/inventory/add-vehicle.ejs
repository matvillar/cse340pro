<% if (title) { %>
<h1 class="form-title"><%= title %></h1>
<% } else { res.redirect('/'); } %>

<!-- Display message in case of error -->
<% if (message) { %>
<p class="notice"><%= message %></p>
<% } %>

<div class="add-new-form_container">
  <p>All Fields are required</p>
  <form
    class="classification-form"
    id="addVehicle"
    action="/inv/add-vehicle"
    method="post"
  >
    <div class="class_form-input"><%-selectOption-%></div>
    <div class="class_form-input">
      <label for="invMake">Make</label>
      <input
        type="text"
        name="inv_make"
        id="invMake"
        pattern="[a-zA-Z]+"
        required
      />
    </div>
    <div class="class_form-input">
      <label for="invModel">Model</label>
      <input
        type="text"
        name="inv_model"
        id="invModel"
        pattern="[a-zA-Z]+"
        required
      />
    </div>
    <div class="class_form-input">
      <label for="invDescription">Description</label>
      <textarea
        type="text"
        name="inv_description"
        id="invDescription"
        form="addVehicle"
        pattern="\w+"
        required
      ></textarea>
    </div>
    <div class="class_form-input">
      <label for="invImage">Image Path</label>
      <input type="text" name="inv_image" id="invImage" />
    </div>
    <div class="class_form-input">
      <label for="invThumbnail">Thumbnail Path</label>
      <input type="text" name="inv_thumbnail" id="invThumbnail" />
    </div>
    <div class="class_form-input">
      <label for="invPrice">Price</label>
      <input type="text" name="inv_price" id="invPrice" />
    </div>
    <div class="class_form-input">
      <label for="invYear">Year</label>
      <input type="text" name="inv_year" id="invYear" />
    </div>
    <div class="class_form-input">
      <label for="invMiles">Miles</label>
      <input type="text" name="inv_miles" id="invMiles" />
    </div>
    <div class="class_form-input">
      <label for="invColor">Color</label>
      <input type="text" name="inv_color" id="invColor" />
    </div>

    <button type="submit" value="Add Vehicle">Add Vehicle</button>
  </form>
</div>

<div class="go-back"><a href="/inv/admin-inv"><--</a></div>

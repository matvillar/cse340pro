<% if (title) { %>
<h1 class="form-title"><%= title %></h1>
<% } else { res.redirect('/'); } %>

<!-- Display message in case of error -->
<% if (typeof errors !== 'undefined') { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %><% if (message) { %>
<p class="notice"><%= message %></p>
<% } %>

<div class="add-new-form_container">
  <p>All Fields are required</p>
  <form
    class="classification-form"
    id="addVehicle"
    action="/inv/add-vehicle"
    method="post"
  >
    <div class="class_form-input"><%-classificationSelect-%></div>
    <div class="class_form-input">
      <label for="invMake">Make</label>
      <input
        type="text"
        name="inv_make"
        id="invMake"
        pattern="[a-zA-Z]+"
        required
        value="<%= locals.inv_make%>"
      />
    </div>
    <div class="class_form-input">
      <label for="invModel">Model</label>
      <input
        type="text"
        name="inv_model"
        id="invModel"
        pattern="[a-zA-Z]+"
        required
        value="<%= locals.inv_model%>"
      />
    </div>
    <div class="class_form-input">
      <label for="invDescription">Description</label>
      <textarea
        type="text"
        name="inv_description"
        id="invDescription"
        form="addVehicle"
        pattern="\w+"
        required
        value="<%=locals.inv_description%>"
      ></textarea>
    </div>
    <div class="class_form-input">
      <label for="invImage">Image Path</label>
      <input
        type="text"
        name="inv_image"
        id="invImage"
        required
        value="<%= locals.inv_image %>"
        placeholder="/images/vehicles/image.png"
      />
    </div>
    <div class="class_form-input">
      <label for="invThumbnail">Thumbnail Path</label>
      <input
        type="text"
        name="inv_thumbnail"
        id="invThumbnail"
        placeholder="/images/vehicles/image.png"
        value="<%= locals.inv_thumbnail %>"
        required
      />
    </div>
    <div class="class_form-input">
      <label for="invPrice">Price</label>
      <input
        type="text"
        name="inv_price"
        id="invPrice"
        required
        value="<%= locals.inv_price %>"
      />
    </div>
    <div class="class_form-input">
      <label for="invYear">Year</label>
      <input
        type="text"
        name="inv_year"
        id="invYear"
        placeholder="year should be 4 digits"
        required
        pattern="\d{4}"
        value="<%= locals.inv_year %>"
      />
    </div>
    <div class="class_form-input">
      <label for="invMiles">Miles</label>
      <input
        type="text"
        name="inv_miles"
        id="invMiles"
        required
        value="<%= locals.inv_miles %>"
      />
    </div>
    <div class="class_form-input">
      <label for="invColor">Color</label>
      <input
        type="text"
        name="inv_color"
        id="invColor"
        required
        value="<%= locals.inv_color %>"
      />
    </div>

    <button type="submit" value="Add Vehicle">Add Vehicle</button>
  </form>
</div>

<div class="go-back"><a href="/inv/admin-inv"><--</a></div>

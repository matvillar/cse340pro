<% if (title) { %>
<h1 class="form-title"><%= title %></h1>
<% } else { res.redirect('/'); } %>

<!-- Display message in case of error -->

<% if (message) { %>
<p class="notice"><%= message %></p>
<% } %>

<div class="add-new-form_container">
  <p>Confirm Deletion - The delete is permanent.</p>
  <form
    class="classification-form"
    id="editVehicle"
    action="/inv/delete"
    method="post"
  >
    <div class="class_form-input">
      <label for="invMake">Make</label>
      <input
        type="text"
        name="inv_make"
        id="invMake"
        pattern="[a-zA-Z]+"
        required
        value="<%= locals.inv_make%>"
        readonly
      />
    </div>
    <div class="class_form-input">
      <label for="invModel">Model</label>
      <input
        type="text"
        name="inv_model"
        id="invModel"
        pattern="[a-zA-Z]+"
        required
        value="<%= locals.inv_model%>"
        readonly
      />
    </div>

    <div class="class_form-input">
      <label for="invPrice">Price</label>
      <input
        type="text"
        name="inv_price"
        id="invPrice"
        required
        value="<%= locals.inv_price %>"
        readonly
      />
    </div>
    <div class="class_form-input">
      <label for="invYear">Year</label>
      <input
        type="text"
        name="inv_year"
        id="invYear"
        placeholder="year should be 4 digits"
        required
        pattern="\d{4}"
        value="<%= locals.inv_year %>"
        readonly
      />
    </div>

    <button type="submit">Delete Vehicle</button>
    <input
      type="hidden"
      name="inv_id"
      value="<% if(locals.inv_id) {%>
      <%=locals.inv_id %>
      <% } %>"
    />
  </form>
</div>

<div class="go-back"><a href="/inv/">Go Back</a></div>
